@model spice.Models.ViewModels.OrderDetalisViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Detalis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form">
    <br />
    <h2 class="text-info" style="text-align:center">Bill</h2>
    <br />
    <h5 class="text-info" style="text-align:center">restaurant Adel Shady</h5>
    <br />
    <div style="text-align:center">
        <h4 class="my-0">
            <span>Name :</span>
            <span>@Model.orderHeader.ApplicationUser.Name</span>


        </h4>
        <h4 class="my-0">

            <span>FrontDesk :</span>
            @if (User.IsInRole(spice.Utiles.SD.MangerUser) || User.IsInRole(spice.Utiles.SD.FrontDeskUser))
            {
                <span>@HttpContextAccessor.HttpContext.Session.GetString(spice.Utiles.SD.SessionFrontDiskAndManger)</span>
            }

        </h4>
        <h4 class="my-0">

            <span>Order Date :</span>
            <span>@Model.orderHeader.OrderDate</span>

        </h4>
    </div>
    <br />
    <div class="col-12 form">


        <ul class="list-group mb-3">
            @{ var total = 0.0;
                var a = Model;

            }

            @foreach (var detalis in Model.orderDetalis)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0"> @detalis.Name</h6>
                        <small class="text-muted">Quantity : @detalis.Count</small>
                    </div>
                    <span class="text-muted">$@(detalis.Price * detalis.Count)</span>
                </li>
            }
            @if (Model.orderHeader.CouponCode != null)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div class="text-success">
                        <h6 class="my-0"> Promo Code </h6>
                        <small class="text-success">@Model.orderHeader.CouponCode</small>
                    </div>
                    <span class="text-success">-$@(total - Model.orderHeader.OrderTotal)</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between bg-light">
                <small class="text-info">Total (USD) </small>
                <strong class="text-info">$@(Model.orderHeader.OrderTotal)</strong>
            </li>

        </ul>
        <div>
            <input type="button" style="border:dotted" class="btn btn-primary" asp-action="DemoViewAsPdf" asp-controller="Order"  id="create_pdf" value="Print My Subjects">
            <hr style="background-color:#25b7c4" />
        </div>
    </div>
</form>

